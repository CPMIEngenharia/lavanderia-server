<body>

<div class="container">
    <img src="https://cdn-icons-png.flaticon.com/512/2954/2954911.png" class="logo">
    <h2 id="machine-id">Carregando...</h2>
    <p style="color: #666;">Escolha o serviço desejado:</p>

    <div id="setup-area">
        <select id="cycle-select">
            <option value="45">Lavar Completo (45 min)</option>
            <option value="15">Lavar Rápido (15 min)</option>
            <option value="secar">Secar Roupa (45 min)</option>
        </select>
        <button id="pay-btn" onclick="requestPix()">GERAR PIX</button>
    </div>

    <div id="qr-area">
        <p>Pague com o seu banco:</p>
        <img id="qr-display" class="qr-img" src="">
        <div class="pix-code" id="pix-string"></div>
        <button onclick="copyPix()" style="background: #666; font-size: 14px; padding: 10px;">Copiar Código Pix</button>
        <div id="success" class="success-msg">✓ Pagamento detectado! A máquina irá ligar.</div>
    </div>
</div>

<script>
    const urlParams = new URLSearchParams(window.location.search);
    const idMaquina = urlParams.get('id') || 'lavadora01';
    document.getElementById('machine-id').innerText = idMaquina.toUpperCase();

    async function requestPix() {
        const btn = document.getElementById('pay-btn');
        const tempo = document.getElementById('cycle-select').value;
        
        btn.disabled = true;
        btn.innerText = "Consultando Preço...";

        try {
            const res = await axios.post('/criar_pagamento', { id_maquina: idMaquina, tempo: tempo });
            
            document.getElementById('setup-area').style.display = 'none';
            document.getElementById('qr-area').style.display = 'block';
            document.getElementById('qr-display').src = "data:image/jpeg;base64," + res.data.qr_base64;
            document.getElementById('pix-string').innerText = res.data.qr_code;
            
        } catch (err) {
            alert("Erro ao conectar com a planilha do dono da máquina.");
            btn.disabled = false;
            btn.innerText = "Tentar Novamente";
        }
    }

    function copyPix() {
        const text = document.getElementById('pix-string').innerText;
        navigator.clipboard.writeText(text);
        alert("Código Pix copiado!");
    }
</script>

</body>
</html>
