        :root { --blue: #009ee3; --green: #2ecc71; }
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: #f0f2f5; display: flex; align-items: center; justify-content: center; min-height: 100vh; margin: 0; }
        .container { background: white; padding: 30px; border-radius: 20px; box-shadow: 0 10px 25px rgba(0,0,0,0.1); width: 90%; max-width: 400px; text-align: center; }
        .logo { width: 70px; margin-bottom: 15px; }
        h2 { margin: 0 0 10px; color: #333; }
        select { width: 100%; padding: 12px; margin: 15px 0; border-radius: 8px; border: 1px solid #ddd; font-size: 16px; }
        button { width: 100%; background: var(--blue); color: white; border: none; padding: 15px; border-radius: 8px; font-size: 18px; font-weight: bold; cursor: pointer; transition: 0.3s; }
        button:disabled { background: #ccc; }
        #qr-area { display: none; margin-top: 20px; border-top: 1px solid #eee; padding-top: 20px; }
        .qr-img { width: 200px; height: 200px; margin: 10px auto; display: block; }
        .pix-code { background: #eee; padding: 10px; font-size: 11px; word-break: break-all; border-radius: 5px; margin: 10px 0; border: 1px dashed #999; }
